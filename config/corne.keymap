/ {
    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };
        combo_gamelayer {
                timeout-ms = <50>;
                key-positions = <37 40>;
                bindings = <&tog 4>;
        };
        combp_caps {
                timeout-ms = <50>;
                key-positions = <12 13>;
                bindings = <&kp LCAPS>;
        };
    };
};


/*
   &kp TAB   &kp Q &kp W &kp E &kp R &kp T   &kp Y &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LCTRL &kp A &kp S &kp D &kp F &kp G   &kp H &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LSHFT &kp Z &kp X &kp C &kp V &kp B   &kp N &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                  &kp LGUI &mo 1 &kp SPACE   &kp RET &mo 2 &kp RALT
*/

/ {
        behaviors {
                //TapDance for: o ó ö ő
                td_o: tap_dance_o {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&mt m_alt_1_o O> <&mt m_alt_3_o m_alt_2_o> ;
                };

                //TapDance for: u ú ü ű
                td_u: tap_dance_u {
                        compatible = "zmk,behavior-tap-dance";
                        #binding-cells = <0>;
                        tapping-term-ms = <200>;
                        bindings = <&mt m_alt_1_u U> <&mt m_alt_3_u m_alt_2_u> ;
                };

                td_ag: tap_dance_alt_gui {
                        compatible = "zmk,behavior-tap-dance";
