        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        display-name = "Base";
                        bindings = <
   &mt ESC TAB  &kp Q         &kp W &mt m_alt_e E &kp R &kp T                 &kp Y   &td_u  &kp I     &td_o   &kp P     &kp DEL
   &kp LSHFT       &mt m_alt_a A &kp S &kp D         &kp F &kp G                 &kp H   &kp J  &kp K     &kp L   &kp SQT   &kp BSPC
   &kp LCTRL    &kp Z         &kp X &kp C         &kp V &kp B                 &kp N   &kp M  &kp COMMA &kp DOT &kp MINUS &kp DQT
                                    &td_ag        &mo 1 &kp SPACE             &kp RET &mo 2  &kp RALT
                        >;
                };
                bracket_layer {
// -----------------------------------------------------------------------------------------
// |  TAB |   ^  |   *  | -/+ |  (  |  )  |        |  &  |      |   ~  |  #  |     | DEl |
// | CTRL |     |      |  =  |  [  |  ]  |        |  |  |  <>  |  `   |   $  |  @  |     |
// | SHFT |  %  |  /  |  \  |  {  |  }  |        |  !  |      |      |      |     |     |
//                    | GUI |     | SPC |        | ENT |     | ALT |
                        display-name = "KIS CICA";
                        bindings = <
   &trans  &kp CARET &kp ASTRK &td_pm      &kp LPAR &kp RPAR          &kp AMPS &none    &kp TILDE &kp HASH &none  &trans
   &trans  &none     &none     &kp EQUAL   &kp LBRC &kp RBRC          &kp PIPE &td_ltgt &kp GRAVE &kp DLLR &kp AT &trans
   &trans  &kp PRCNT &kp BSLH  &kp FSLH    &kp LBKT &kp RBKT          &kp EXCL &none    &none     &none    &none  &none
                    	       &trans      &trans   &trans            &trans  &trans   &trans
                        >;
                };
                num_layer {
/* Original
&trans &kp N1       &kp N2       &kp N3       &kp N4       &kp N5         &kp N6   &kp N7   &kp N8 &kp N9    &kp N0 &kp BSPC
   &trans &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bt BT_SEL 3 &bt BT_SEL 4   &kp LEFT &kp DOWN &kp UP &kp RIGHT &trans &trans
   &trans &trans       &trans       &trans       &trans       &trans         &trans   &trans   &trans &trans    &trans &trans
                          	        &kp LGUI     &trans       &kp SPACE      &kp RET  &trans   &kp RALT
*/
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        display-name = "UTYULU-PUTYULU";
                        bindings = <
   &trans &none &none         &mt PG_UP UP   &none         &none                &kp N0  &td_n1f1 &td_n2f2  &td_n3f3  &kp F4  &trans
   &trans &none &mt HOME LEFT &mt PG_DN DOWN &mt END RIGHT &none                &none   &td_n4f5 &td_n5f6  &td_n6f7  &kp F8  &trans
   &trans &none &none         &none          &none         &none                &none   &td_n7f9 &td_n8f10 &td_n9f11 &kp F12 &none
                              &kp LGUI       &kp LGUI      &kp SPACE            &kp RET &trans   &kp RALT
                        >;
                };
                setting_layer{
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        display-name = "CSETTTINGZ";
                        bindings = <
   &out OUT_TOG &bt BT_DISC 0 &bt BT_DISC 1 &bt BT_DISC 2 &bt BT_DISC 3 &bt BT_DISC 4           &none    &none    &none &none &none &trans
   &out OUT_BLE &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4            &none    &none    &none &none &none &trans
   &out OUT_USB &none         &none         &none         &bt BT_PRV    &bt BT_NXT              &none    &none    &none &none &none &bt BT_CLR
                          	            &kp LGUI      &trans        &kp SPACE               &kp RET  &trans   &kp RALT
                        >;
                };
                game_layer{
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        display-name = "(X^2)^2";
                        bindings = <
&kp TAB   &kp Q &kp W  &kp E  &kp R &kp T                 &kp Y   &kp U  &kp I     &kp O   &kp P     &kp DEL
&kp LSHFT &kp A &kp S  &kp D  &kp F &kp G                 &kp H   &kp J  &kp K     &kp L   &kp SQT   &kp BSPC
&kp LCTRL &kp Z &kp X  &kp C  &kp V &kp B                 &kp N   &kp M  &kp COMMA &kp DOT &kp MINUS &kp DQT
                       &kp LALT &mo 5 &kp SPACE           &kp RET &mo 0  &kp RALT
                        >;
                };
                sub_game_layer{
// -----------------------------------------------------------------------------------------
// |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
// | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        display-name = "X/(X^2)^2";
                        bindings = <
&kp ESC &kp N0 &kp N1 &kp N2 &kp N3 &trans               &trans &trans &trans &trans &trans &trans
&kp CAPS &trans &kp N4 &kp N5 &kp N6 &trans               &trans &trans &trans &trans &trans &trans
&trans &trans &kp N7 &kp N8 &kp N9 &trans               &trans &trans &trans &trans &trans &trans
                     &trans &trans &trans               &trans &trans  &trans
                        >;
